<h5>
    Page @Model.PagingInformation.CurrentPage
    of @Model.PagingInformation.TotalPages
</h5>

@for (int i = 1; i <= Model.PagingInformation.TotalPages; i++)
{
    if (i == Model.PagingInformation.CurrentPage)
    {
        <strong> Page @i</strong>
    }
    else
    {
        <a asp-controller="Home" asp-action="Index" asp-route-productPage="@i">
            Page @i
        </a>
    }
    
}