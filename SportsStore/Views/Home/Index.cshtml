@model ProductListViewModel

<h4> Welcome to SportsStore </h4>
<a asp-action="Add"> Add New Product </a>
<hr />

@foreach (Product p in Model.Products)
{
    <h3><a asp-controller="Home" asp-action="Details" asp-route-id="@p.ProductId"> @p.Name </a></h3>
    <h4> @p.Price.ToString("c") </h4>
    //<a href="/Home/Details/?id=@p.ProductId"> Details </a>
    <hr />
}

